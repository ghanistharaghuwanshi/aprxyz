<html>
	<head>
		<title>Login</title>
		<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
		<link href="<%= host %>css/materialize.css" type="text/css" rel="stylesheet" media="screen,projection">
		<link href="<%= host %>css/style.css" type="text/css" rel="stylesheet" media="screen,projection"> 
		<link rel="stylesheet" href="<%= host %>css/materialize.min.css">
		<link href="<%= host %>css/style.css" type="text/css" rel="stylesheet" media="screen,projection"> 
	</head>
	<body>
		<div class="main">
			<nav class="white" role="navigation">
				<a id="logo-container" class="brand-logo"><img class="responsive-img circle" src="<%= host %>/images/logo1.png" style="height: 65px; padding: 5px;" /></a>
				<div class="nav-wrapper container">
					<div class="row">
						<div class="col s2"></div>
						<div class="col s6">
							<!-- <input type="search" name="search" class="search" placeholder="Search.."> -->
						</div>
						<div class="col s4">
							<ul class="right hide-on-med-and-down">
								<li>
									<a href="javscript:void(0)" ng-click="showMenu()"><i class="large material-icons">settings</i></a>
								</li>
							</ul>
						</div>
					</div>
				</div>
			</nav>
			<form role="form" action="<%= host %>loginAuthentication" id="LoginForm" method="post">
				<div class="container oauthpopup">
					<div class="facebook_title">Login</div>
					<div class="facebook_message">
						<div class="row">
							<div class="col s2">
								<img src="<%=host%>images/user-permissions.png" style="width:90%; padding-top: 1.8em">
							</div>
							<div class="col s7">
								<div> <%= message %></div>
								<input type="hidden" name="RequestUrl" value="<%= RequestUrl %>">
								<div class="form-group">
									<label>Email</label>
									<input type="email" name="email" id="email" placeholder="Enter Email..">
								</div>
								<div class="form-group">
									<label>Password</label>
									<input type="password" name="password" id="password" placeholder="Enter Password..">
								</div>
								<!-- <button type="submit" class="submitBtn">Login</button> -->
								<input type="submit" value="Login" class="g_btn right-align" id="allow">&nbsp;
							</div>
							<div class="col s3">
								<img src="<%=host%>images/logo1.png" style="width:90%; padding-top: 1.8em">
							</div>
						</div>
					</div>
					<div class="facebook_container">
						<div>

						</div>
					</div>
				</div>
			</form>
			<footer class="page-footer grey darken-1" style="padding-top: 0; position: fixed; width: 100%; bottom: 0px;">
				<div class="footer-copyright">
					<div class="container">
					<!--  Made by <a class="orange-text text-lighten-3" href="#">Materialize</a> -->
					</div>
				</div>
			</footer>
		</div>
	</body>

	<script src="<%= host %>js/jquery-latest.js"></script>
	<script src="<%= host %>js/angular.min.js"></script>
	<script src="<%= host %>js/materialize.js"></script>
	<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/angular-materialize/0.2.1/angular-materialize.min.js"></script>
</html>
